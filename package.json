{
  "name": "knowflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "dev:clean": "./scripts/restart-dev.sh",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "postinstall": "node -e \"const v=process.version.slice(1).split('.'); if(parseInt(v[0])<20||(parseInt(v[0])===20&&parseInt(v[1])<9)){console.error('⚠️  Next.js requires Node.js >=20.9.0. Current:', process.version); process.exit(1)}\" || true"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@shadcn/ui": "^0.0.4",
    "@supabase/supabase-js": "^2.49.8",
    "@tiptap/extension-bold": "^3.4.2",
    "@tiptap/extension-code": "^3.4.2",
    "@tiptap/extension-document": "^3.4.2",
    "@tiptap/extension-gapcursor": "^3.4.2",
    "@tiptap/extension-history": "^3.4.2",
    "@tiptap/extension-italic": "^3.4.2",
    "@tiptap/extension-paragraph": "^3.4.2",
    "@tiptap/extension-placeholder": "^3.4.2",
    "@tiptap/extension-strike": "^3.4.2",
    "@tiptap/extension-text": "^3.4.2",
    "@tiptap/pm": "^3.2.0",
    "@tiptap/react": "^3.4.2",
    "@tiptap/starter-kit": "^3.4.2",
    "@uiw/react-md-editor": "^4.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.511.0",
    "next": "^16.0.8",
    "node-telegram-bot-api": "^0.66.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-force-graph": "^1.47.6",
    "react-force-graph-2d": "^1.27.1",
    "react-i18next": "^16.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "three": "^0.177.0",
    "tippy.js": "^6.3.7",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^22.15.29",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tw-animate-css": "^1.3.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.knowflow.app",
    "productName": "KnowFlow",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      ".next/**/*",
      "public/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
